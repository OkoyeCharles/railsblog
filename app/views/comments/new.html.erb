<section class="main">
  <h1>Add a comment</h1>
  <%= form_with model: @comment, url: user_post_comments_path, method: :post, locals: true, scope: :comment do |f| %>
    <div>
      <%= f.label :text %>
      <%= f.text_area :text %>
    </div>
    <%= f.submit 'Add Comment' %>
  <% end %>
</section>