<section class="main">

  <h2>Information for User #<%= @user.id %></h2>

  <%= render 'cards/user', user: @user %>

  <article class="container">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </article>

  <% @user.recent_posts.each do |post| %>
    <article class="container post">
      <h3><%= post.title %></h3>
      <p><%= post.text.truncate(50, omission: '...' ) %></p>
      <div class="font-sm right">
        Comments: <%= post.comments_counter || 0 %> Likes: <%= post.likes_counter || 0 %>
      </div>
      <%= link_to user_post_path(@user.id, post.id) do %>
        <button class="view-posts-btn">View post</button>
      <% end %>
    </article>
  <% end %>
  <%= link_to user_posts_path(@user.id) do %>
    <button class="see-posts-btn">See all posts</button>
  <% end %>
</section>
